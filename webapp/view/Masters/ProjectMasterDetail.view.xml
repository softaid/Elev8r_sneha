<mvc:View
	xmlns:c="sap.ui.core"
	controllerName="sap.ui.elev8rerp.componentcontainer.controller.Masters.ProjectMasterDetail"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	height="100%">

    <f:DynamicPage toggleHeaderOnTitleClick="false">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{editMasterModel>/typename}"/>
                </f:heading>
                <f:actions>
                    <ToolbarSpacer/>
                        <Button
                        text="{i18n>saveButtonText}"
                        type="Emphasized"
                        press="onSave" id="btnSave"/>
                    <Button
                        text="{i18n>deleteButtonText}"
                        type="Emphasized"
                        press="onDelete"
                        id= "btnDelete"/>						
                </f:actions>
                <f:navigationActions>
                    <Button
                        icon="sap-icon://decline"
                        type="Transparent" press="onCancel" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>	
            <VBox fitContainer="true">
                <form:Form editable="true">
                    <form:title>
                        <core:Title text="" />
                    </form:title>
                    <form:layout>
                        <form:ResponsiveGridLayout
                            labelSpanXL="2"
                            labelSpanL="4"
                            labelSpanM="4"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="0"
                            emptySpanL="0"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="1"
                            columnsM="1"
                            singleContainerFullSize="false" />
                    </form:layout>
                    <form:formContainers>
                        <form:FormContainer>
                            <form:formElements>
                                <form:FormElement id="typeEle" label="Type">
                                    <form:fields>
                                        <Select id="type"
                                            change="typeChanged"
                                            selectedKey="{editMasterModel>/type}" 
                                            width="500px"
                                            items="{
                                                path: 'refTypeModel>/modelData',
                                                sorter: { path: 'id' }
                                            }">
                                            <core:Item key="{refTypeModel>description}" text="{refTypeModel>description}" />
                                        </Select>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement id="stgTypeEle" label="Stage Type">
                                    <form:fields>
                                        <Select id="stgtype"
                                            change="stgtypeChanged"
                                            selectedKey="{editMasterModel>/stgtypeid}" 
                                            width="500px"
                                            items="{
                                                path: 'stgTypeModel>/modelData',
                                                sorter: { path: 'id' }
                                            }">
                                            <core:Item key="{stgTypeModel>id}" text="{stgTypeModel>description}" />
                                        </Select>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement id="parentStageEle" label="Parent">
                                    <form:fields>
                                        <Select id="parentstage"
                                            change=""
                                            selectedKey="{editMasterModel>/parentid}" 
                                            forceSelection="false"
                                            width="500px"
                                            items="{
                                                path: 'parentStageModel>/modelData',
                                                sorter: { path: 'id' }
                                            }">
                                            <core:Item key="{parentStageModel>id}" text="{parentStageModel>description}" />
                                        </Select>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement id="departmentEle" label="Department">
                                    <form:fields>
                                        <Select id="departmentid"
                                            change=""
                                            selectedKey="{editMasterModel>/departmentid}" 
                                            forceSelection="false"
                                            width="500px"
                                            items="{
                                                path: 'departmentModel>/modelData',
                                                sorter: { path: 'id' }
                                            }">
                                            <core:Item key="{departmentModel>id}" text="{departmentModel>department}" />
                                        </Select>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement id="sequenceEle" label="{i18n>leadSequenceNo}">
                                    <form:fields>
                                        <Input id="sequenceno" value="{editMasterModel>/sequenceno}"/>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="{i18n>leadDescription}">
                                    <form:fields>
                                        <Input id="description" value="{editMasterModel>/description}"/>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Prerequisites" id="prerequisitesEle">
                                    <form:fields>
                                        <MultiComboBox id="prerequisites"
                                            required="true" 
                                            selectionChange=""
                                            selectionFinish="handleSelectionFinish"
                                            width="500px"
                                            items="{
                                                    path: 'prerequisiteModel>/modelData',
                                                    sorter: { path: 'id' }
                                                    }">
                                            <core:Item key="{prerequisiteModel>id}" text="{prerequisiteModel>description}" />
                                        </MultiComboBox>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement id="activeEle" label="{i18n>Active}">
                                    <form:fields>
                                        <Switch  state="{editMasterModel>/active}" id="active" customTextOn="Yes" customTextOff="No" valueLiveUpdate="true" >
                                            <layoutData>
                                                <FlexItemData growFactor="1" />
                                            </layoutData>
                                        </Switch>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement id="projectPerEle" label="Projct Per">
                                    <form:fields>
                                        <Slider width="100%" class="customInputHeight" enableTickmarks="true" id="inpWarningLevel"
                                            max="100" min="0" progress="true"
                                            showAdvancedTooltip="true" value="{editMasterModel>/projectper}">
                                            <ResponsiveScale id="rScaleWarningLevel"
                                                tickmarksBetweenLabels="20" />
                                        </Slider>
                                    </form:fields>
                                </form:FormElement> 
                                <form:FormElement id="stagePerEle" label="Stage Per">
                                    <form:fields>
                                        <Slider width="100%" height="200%" class="customInputHeight" enableTickmarks="true" id="inpWarningLevelOne"
                                            max="100" min="0" progress="true"
                                            showAdvancedTooltip="true" value="{editMasterModel>/stageper}">
                                            <ResponsiveScale id="rScaleWarningLevelOne"
                                                tickmarksBetweenLabels="20" />
                                        </Slider>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement>
                                    <form:fields>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement id="attributeEle" label="Attribute Type">
                                    <form:fields>
                                        <MultiComboBox id="attributetype"
                                            required="true" 
                                            selectionChange=""
                                            selectionFinish="handleSelectionFinish"
                                            width="500px"
                                            items="{
                                                    path: 'attributeModel>/modelData',
                                                    sorter: { path: 'id' }
                                                    }">
                                            <core:Item key="{attributeModel>id}" text="{attributeModel>description}" />
                                        </MultiComboBox>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement id="customerSignOffEle" label="Is customer signoff required">
                                    <form:fields>
                                        <Switch  state="{editMasterModel>/iscustomersignoffrequired}" id="customerSignoff" customTextOn="Yes" customTextOff="No" valueLiveUpdate="true" >
                                            <layoutData>
                                                <FlexItemData growFactor="1" />
                                            </layoutData>
                                        </Switch>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement id="addToggleEle" label="Add to current project">
                                    <form:fields>
                                        <Switch  state="{editMasterModel>/addtocurrentproject}" id="addToggle" customTextOn="Yes" customTextOff="No" valueLiveUpdate="true" >
                                        <layoutData>
                                                <FlexItemData growFactor="1" />
                                            </layoutData>
                                        </Switch>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement id="notifyEle" label="Notify User">
                                    <form:fields>
                                        <Switch  state="{editMasterModel>/notifyinternaluser}" id="notify" customTextOn="Yes" customTextOff="No" valueLiveUpdate="true" >
                                            <layoutData>
                                                <FlexItemData growFactor="1" />
                                            </layoutData>
                                        </Switch>
                                    </form:fields>
                                </form:FormElement>
                            </form:formElements>
                        </form:FormContainer>
                    </form:formContainers>
                </form:Form>
            </VBox>
        </f:content>				
	</f:DynamicPage>
</mvc:View>
