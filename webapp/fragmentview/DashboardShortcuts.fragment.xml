<ActionSheet id="actionSheet"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	core:require="{ MessageToast: 'sap/m/MessageToast' }"
	title="Choose Your Action"
	showCancelButton="true"
	placement="Bottom">
	<Button
		text="Add Lead"
		icon="sap-icon://leads"
		press="addLead" />
	<Button
		text="Add Lead Activity"
		icon="sap-icon://activities"
		press="addLeadActivity" />
	<Button
		text="Add Quotation"
		icon="sap-icon://sales-quote"
		press="addQuotation" />
	<Button
		text="Add Project"
		icon="sap-icon://workflow-tasks"
		press="addProject" />
</ActionSheet>